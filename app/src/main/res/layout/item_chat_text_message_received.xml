<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layoutDirection="ltr"
    android:padding="@dimen/padding"
    tools:ignore="RtlHardcoded">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/border_chat_message_receive"
      android:orientation="vertical"
      tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:id="@+id/ln_reply"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_minimum"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin_minimum"
            android:background="@color/color_Red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding">

          <TextView
              android:id="@+id/txt_reply_name"
              style="@style/custom_Txt_Sub_Title_style"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:padding="@dimen/padding_minimum"
              android:text="name"
              android:textColor="@color/color_Hint" />

          <TextView
              android:id="@+id/txt_reply_message"
              style="@style/custom_Txt_Sub_Title_style"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:padding="0dp"
              android:text="name"
              android:textColor="@color/color_Hint"
              tools:ignore="InefficientWeight" />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin"
          android:layout_marginTop="@dimen/margin"
          android:layout_marginRight="@dimen/margin"
          android:layout_marginBottom="@dimen/margin_minimum"
          android:orientation="horizontal"
          tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/padding"
            android:background="@drawable/circle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <TextView
              android:id="@+id/text_message_name"
              style="@style/custom_Txt_Sub_Title_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding"
              android:text="John Doe" />

          <TextView
              android:id="@+id/text_message_body"
              style="@style/custom_Txt_Normal_style"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="240dp"
              android:padding="@dimen/padding_minimum"
              android:text="hi man, how are you?" />

          <TextView
              android:id="@+id/text_message_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:padding="0dp"
              android:text="11:40"
              android:textSize="10sp" />
        </LinearLayout>

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>