<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            style="@style/custom_item_rcv_style"
            android:layout_marginTop="@dimen/margin_minimum"
            android:layout_marginBottom="@dimen/margin_minimum"
            android:layout_height="wrap_content">

            <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipe_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:clickToClose="true"
                app:drag_edge="left|right"
                app:show_mode="pull_out">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_back_send_sweep_view"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/ln_send"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="@dimen/margin"
                            app:srcCompat="@drawable/ic_comission" />

                        <TextView
                            style="@style/custom_Txt_Normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/hint_comission"
                            android:textColor="@color/color_White"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_back_taeed_sweep_view"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/ln_taeed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="@dimen/margin"
                            app:srcCompat="@drawable/ic_confirm" />

                        <TextView
                            style="@style/custom_Txt_Normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/hint_confirm"
                            android:textColor="@color/color_White"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding"
                        android:paddingRight="@dimen/padding">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_profile"
                                style="@style/custom_ic_right_style"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:layout_margin="0dp" />

                            <LinearLayout
                                android:id="@+id/ln_hamesh"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_hamesh"
                                    style="@style/custom_ic_right_style"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="0dp"
                                    android:scaleType="fitCenter"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_hamesh" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginRight="@dimen/margin_minimum"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center|top"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/padding">

                                <ImageView
                                    android:id="@+id/img_seen"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="top|center"
                                    android:layout_margin="@dimen/margin_minimum"
                                    android:background="@drawable/ic_seen"
                                    android:visibility="invisible" />

                                <ImageView
                                    android:id="@+id/img_waiting"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="top|center"
                                    android:layout_margin="@dimen/margin_minimum"
                                    android:background="@drawable/ic_clock"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|right"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_name"
                                        style="@style/custom_Txt_Normal_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:gravity="center|right"
                                        android:maxLines="1"
                                        android:text="pol pol" />

                                    <TextView
                                        android:id="@+id/txt_role_name"
                                        style="@style/custom_Txt_Normal_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:gravity="center|right"
                                        android:maxLines="1"
                                        android:padding="0dp"
                                        android:text="[ 123 ]"
                                        tools:ignore="NestedWeights" />

                                    <TextView
                                        android:id="@+id/txt_code"
                                        style="@style/custom_Txt_Normal_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:gravity="center|right"
                                        android:maxLines="1"
                                        android:padding="0dp"
                                        android:text="@string/tmpl_text"
                                        android:textColor="@color/colorPrimaryDark" />

                                    <TextView
                                        android:id="@+id/txt_subject"
                                        style="@style/custom_Txt_Normal_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:gravity="center|right"
                                        android:maxLines="1"
                                        android:padding="0dp"
                                        android:text="@string/tmpl_text"
                                        android:textColor="@color/color_txt_SubTitle" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginLeft="@dimen/margin"
                            android:gravity="center|left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/padding">

                            <TextView
                                android:id="@+id/txt_date"
                                style="@style/custom_Txt_Sub_Title_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:padding="0dp"
                                android:text="12/06/1397" />


                            <TextView
                                android:id="@+id/txt_time"
                                style="@style/custom_Txt_Sub_Title_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:padding="0dp"
                                android:text="/06/1397"
                                android:visibility="visible"
                                tools:ignore="NestedWeights" />

                            <ImageView
                                android:id="@+id/img_attach"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center|left"
                                android:layout_margin="@dimen/margin"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_attach2" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_background"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ln_list_hamesh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_minimum"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ic_list_hamesh" />

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_list_hamesh" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_history_list"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="@dimen/margin_minimum"

                                app:srcCompat="@drawable/ic_gardesh_madrak" />

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_gardesh_madrak" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_zanjire_madrak"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="@dimen/margin_minimum"
                                app:srcCompat="@drawable/ic_zanjireh_madrak" />

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_zanjireh_madrak" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.daimajia.swipe.SwipeLayout>

            <jp.shts.android.library.TriangleLabelView
                android:id="@+id/tlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:backgroundColor="@color/color_Black"
                app:corner="rightTop" />
        </FrameLayout>

        <LinearLayout
            style="@style/custom_divider_style"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="@dimen/margin_maximum" />
    </LinearLayout>
</LinearLayout>
