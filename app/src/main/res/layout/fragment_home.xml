<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_all_cartable_document"
                    style="@style/custom_selected_style"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_weight="0.5"
                    android:background="@drawable/border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin">

                        <TextView
                            android:id="@+id/txt_all_cartable_document_count"
                            style="@style/custom_Txt_Title_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|top"
                            android:paddingTop="0dp"
                            android:text="90"
                            android:textColor="@color/colorPrimaryDark" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/custom_icon_style"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_home_inbox" />

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin"
                                android:gravity="center"
                                android:text="@string/title_all_cartable_document"
                                android:textColor="@color/color_txt_Normal" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_all_unread_message"
                    style="@style/custom_selected_style"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_weight="0.5"
                    android:background="@drawable/border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin">

                        <TextView
                            android:id="@+id/txt_all_unread_message_count"
                            style="@style/custom_Txt_Title_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|top"
                            android:paddingTop="0dp"
                            android:text="90"
                            android:textColor="@color/colorPrimaryDark" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/custom_icon_style"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_home_message" />

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin"
                                android:gravity="center"
                                android:text="@string/title_all_unread_message"
                                android:textColor="@color/color_txt_Normal" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin">
                <LinearLayout
                    android:id="@+id/ln_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_minimum"
                    android:elevation="@dimen/elevation"
                    android:background="@color/color_Divider"
                    android:orientation="vertical" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:id="@+id/ln_rcv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/frm_rcv_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginTop="@dimen/margin"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcv_pin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/margin_maximum"
                                android:background="@color/color_White" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/margin_maximum"
                                android:background="@color/color_Divider" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                app:srcCompat="@drawable/ic_pin" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="@dimen/margin_minimum"
                                android:background="@color/color_Divider" />
                        </FrameLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_action"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_White"
                            android:elevation="@dimen/elevation" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>


                <include layout="@layout/item_txt_nodata" />
            </FrameLayout>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/ln_loading" />

</FrameLayout>
