<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Farzin.View.ActivitySetting">

    <include layout="@layout/farzin_custome_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_White"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln_document_setting"
                style="@style/custom_selected_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:gravity="center|right"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <ImageView
                    style="@style/custom_ic_right_style"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    app:srcCompat="@drawable/ic_home_inbox" />

                <TextView
                    style="@style/custom_Txt_Title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_cartable_setting"
                    android:textColor="@color/color_Black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_maximum"
                    android:layout_weight="1"
                    android:background="@color/color_Divider" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_White"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln_message_setting"
                style="@style/custom_selected_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:gravity="center|right"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <ImageView
                    style="@style/custom_ic_right_style"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    app:srcCompat="@drawable/ic_home_message" />

                <TextView
                    style="@style/custom_Txt_Title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_message_setting"
                    android:textColor="@color/color_Black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_maximum"
                    android:layout_weight="1"
                    android:background="@color/color_Divider" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>