<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@drawable/border_very_large_radios_light"
      android:gravity="center"
      android:orientation="vertical">

    <FrameLayout
        style="@style/custom_selected_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">


      <com.daimajia.swipe.SwipeLayout
          android:id="@+id/swipe_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:clickToClose="true"
          app:drag_edge="left|right"
          app:show_mode="pull_out">

        <LinearLayout
            style="@style/custom_selected_style"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:weightSum="1">

          <LinearLayout
              android:id="@+id/ln_confirm_erja"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center|top"
              android:layout_marginBottom="@dimen/margin"
              android:background="@drawable/border_ln_document_erja"
              android:gravity="center"
              android:orientation="vertical"
              tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/ic_taeed_erja_white" />

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/custom_selected_style"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:weightSum="1">

          <LinearLayout
              android:id="@+id/ln_confirm_inworkflow"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center|top"
              android:layout_marginBottom="@dimen/margin"
              android:background="@drawable/border_ln_document_confirm"
              android:gravity="center"
              android:orientation="vertical"
              tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:id="@+id/img_confirm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_taeed_white" />

            <ImageView
                android:id="@+id/img_inworkflow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_continue_workflow_white" />

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_main"
            style="@style/custom_selected_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_maximum"
                android:background="@drawable/border_bottom_very_large_radios_light"
                android:orientation="horizontal"
                android:padding="@dimen/padding">

              <ImageView
                  android:id="@+id/img_profile"
                  android:layout_width="36dp"
                  android:layout_height="36dp"
                  android:layout_gravity="center|top"
                  android:layout_marginTop="@dimen/margin" />


              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|top"
                  android:layout_marginRight="@dimen/margin"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_minimum">

                  <ImageView
                      android:id="@+id/img_seen"
                      android:layout_width="10dp"
                      android:layout_height="10dp"
                      android:layout_gravity="top|center"
                      android:layout_margin="@dimen/margin_minimum"
                      android:background="@drawable/ic_seen"
                      android:visibility="invisible" />

                  <ImageView
                      android:id="@+id/img_waiting"
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_gravity="top|center"
                      android:layout_margin="@dimen/margin_minimum"
                      android:visibility="gone"
                      app:srcCompat="@drawable/ic_waiting" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:maxLines="1"
                        android:text="pol pol" />

                    <TextView
                        android:id="@+id/txt_role_name"
                        style="@style/custom_Txt_Sub_Title_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:maxLines="1"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="[ 123 ]"
                        android:textColor="@color/color_txt_SubTitle"
                        tools:ignore="NestedWeights" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/padding_minimum"
                        android:paddingBottom="@dimen/padding">

                      <TextView
                          android:id="@+id/txt_hint_subject"
                          style="@style/custom_Txt_Sub_Title_style"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center|top"
                          android:ellipsize="end"
                          android:gravity="center|right"
                          android:maxLines="1"
                          android:paddingTop="0dp"
                          android:paddingBottom="0dp"
                          android:text="@string/hint_subject2"
                          android:textColor="@color/color_txt_SubTitle" />

                      <TextView
                          android:id="@+id/txt_subject"
                          style="@style/custom_Txt_Sub_Title_style"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:ellipsize="end"
                          android:gravity="center|right"
                          android:paddingTop="0dp"
                          android:paddingRight="@dimen/margin_minimum"
                          android:paddingBottom="0dp"
                          android:text="@string/tmpl_text"
                          android:textColor="@color/color_txt_SubTitle" />
                    </LinearLayout>
                  </LinearLayout>


                </LinearLayout>

              </LinearLayout>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|top"
                  android:layout_marginLeft="@dimen/margin"
                  android:gravity="center|left"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/img_attach"
                      android:layout_width="18dp"
                      android:layout_height="18dp"
                      android:layout_gravity="center|bottom|left"
                      android:layout_marginLeft="@dimen/margin"
                      android:layout_marginRight="@dimen/margin"
                      android:visibility="visible"
                      app:srcCompat="@drawable/ic_attach2" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_date"
                        style="@style/custom_Txt_Sub_Title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center|left"
                        android:padding="0dp"
                        android:text="12/06/1397"
                        android:textAppearance="@style/TextAppearance.FontPathIranSans" />


                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/custom_Txt_Sub_Title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center|left"
                        android:padding="0dp"
                        android:text="/06/1397"
                        android:textAppearance="@style/TextAppearance.FontPathIranSans"
                        android:visibility="visible"
                        tools:ignore="NestedWeights" />
                  </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingBottom="@dimen/padding">

                  <ImageView
                      android:id="@+id/img_dastor_erja"
                      style="@style/custom_selected_style"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:layout_gravity="center"
                      android:padding="@dimen/padding_minimum"
                      app:srcCompat="@drawable/ic_dastor_erja" />

                  <ImageView
                      android:id="@+id/img_tozih_shakhsi"
                      style="@style/custom_selected_style"
                      android:layout_width="32dp"
                      android:layout_height="32dp"
                      android:layout_gravity="center"
                      android:layout_marginRight="@dimen/margin"
                      android:padding="@dimen/padding_minimum"
                      app:srcCompat="@drawable/ic_tozih_shkhsi" />

                </LinearLayout>


              </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_more"
                style="@style/custom_selected_style"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/circular_border"
                app:srcCompat="@drawable/ic_arrow_down"
                tools:ignore="UnusedAttribute" />
          </FrameLayout>

          <net.cachapa.expandablelayout.ExpandableLayout
              android:id="@+id/expandable_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_White"
              app:el_duration="100"
              app:el_expanded="false"
              app:el_parallax="0.5"
              tools:ignore="RtlHardcoded">

            <LinearLayout
                android:id="@+id/ln_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/margin"
                  android:gravity="center|right"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/padding"
                  android:paddingRight="@dimen/padding"
                  android:paddingBottom="@dimen/padding_maximum">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="@dimen/margin"
                      android:gravity="center|right"
                      android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"
                        android:orientation="vertical">

                      <TextView
                          android:id="@+id/txt_code"
                          style="@style/custom_Txt_Normal_style"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:ellipsize="end"
                          android:gravity="center|right"
                          android:lines="1"
                          android:maxLines="1"
                          android:text="@string/hint_subject2"
                          android:textAppearance="@style/TextAppearance.FontPathIranSans"
                          android:textColor="@color/color_txt_SubTitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_Divider" />

                    <TextView
                        android:id="@+id/txt_document_type"
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="@string/hint_subject2"
                        android:textColor="@color/color_txt_SubTitle" />

                  </LinearLayout>

                </LinearLayout>


              </LinearLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/border_bottom_cartable_document_list"
                  android:orientation="horizontal"
                  android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ln_list_hamesh"
                    style="@style/custom_selected_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      app:srcCompat="@drawable/ic_hamesh_list" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@color/color_Divider" />

                <LinearLayout
                    android:id="@+id/ln_history_list"
                    style="@style/custom_selected_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                  <ImageView
                      android:layout_width="28dp"
                      android:layout_height="28dp"
                      app:srcCompat="@drawable/ic_document_history" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@color/color_Divider" />

                <LinearLayout
                    android:id="@+id/ln_zanjire_madrak"
                    style="@style/custom_selected_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:padding="@dimen/padding">

                  <ImageView
                      android:layout_width="36dp"
                      android:layout_height="36dp"
                      app:srcCompat="@drawable/ic_zanjireh_madrak" />

                </LinearLayout>
              </LinearLayout>
            </LinearLayout>
          </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>

      </com.daimajia.swipe.SwipeLayout>

      <jp.shts.android.library.TriangleLabelView
          android:id="@+id/tlv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          app:backgroundColor="@color/color_Black"
          app:corner="rightTop" />
    </FrameLayout>


  </LinearLayout>
</LinearLayout>
