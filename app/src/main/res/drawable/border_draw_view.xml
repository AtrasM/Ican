<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow" />
            <corners android:radius="@dimen/normal_radios" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_White" />
            <corners android:radius="@dimen/normal_radios" />
            <stroke
                android:width="@dimen/stroke"
                android:color="@color/color_border" />
        </shape>
    </item>
</layer-list>


