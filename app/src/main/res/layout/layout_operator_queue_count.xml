<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_operator_queue_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin"
    android:background="@drawable/border_cadr_operator_queue_count"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/padding"
    tools:ignore="UnusedAttribute"
    tools:targetApi="m">

    <TextView
        android:id="@+id/txt_title_operator"
        style="@style/custom_Txt_Normal_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="هامش"
        android:textColor="@color/color_White" />


    <TextView
        style="@style/custom_Txt_Normal_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/continue_title_operator_queue_count_info"
        android:textColor="@color/color_White" />

    <TextView
        android:id="@+id/txt_operator_queue_count"
        style="@style/custom_Txt_Sub_Title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/border_light_count"
        android:gravity="center"
        android:padding="@dimen/padding_minimum"
        android:text="99"
        android:textAppearance="@style/TextAppearance.FontPathIranSans"
        android:textColor="@color/color_White" />


</LinearLayout>
