<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin_minimum"
    android:padding="@dimen/padding_minimum"
    android:background="@drawable/border_zanjire_madrak_header"
    android:gravity="center|right"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_type"
        style="@style/custom_ic_right_style"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_peyvast" />

    <TextView
        android:id="@+id/txt_type"
        style="@style/custom_Txt_Title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:text="@string/title_peyvast"
        android:textColor="@color/color_Info" />
</LinearLayout>