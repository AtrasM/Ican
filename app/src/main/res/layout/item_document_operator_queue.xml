<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_White"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">


    <LinearLayout
        android:id="@+id/ln_main"
        style="@style/custom_item_rcv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_minimum"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_header"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_main_delete"
                    style="@style/custom_ic_right_style"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding_minimum"
                    app:srcCompat="@drawable/ic_close" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="26dp"
                    android:paddingTop="@dimen/padding_minimum"
                    android:paddingBottom="@dimen/padding_minimum">

                    <TextView
                        android:id="@+id/txt_title_document_number"
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="سربرگ"
                        android:textColor="@color/color_White" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/custom_divider_style"
                android:layout_margin="0dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text="@string/hint_subject2"
                                android:textColor="@color/color_Info" />

                            <TextView
                                android:id="@+id/txt_title_subject"
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center|right"
                                android:lines="1"
                                android:text="سربرگ"
                                android:textColor="@color/color_txt_Normal" />

                        </LinearLayout>


                        <LinearLayout
                            style="@style/custom_divider_style"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:text="@string/hint_document_action"
                                android:textColor="@color/color_Info" />

                            <TextView
                                android:id="@+id/txt_title_document_action"
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center|right"
                                android:lines="1"
                                android:text="سربرگ"
                                android:textColor="@color/color_txt_Normal" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    style="@style/custom_divider_style"
                    android:layout_height="1dp"
                    android:layout_margin="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ln_operator_optical_pen"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/color_bg_cadr"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/padding"
                                android:paddingBottom="@dimen/padding">

                                <ImageView
                                    android:id="@+id/img_operator_optical_pen"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_margin="@dimen/margin" />

                                <TextView
                                    android:id="@+id/txt_operator_optical_pen"
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/title_hamesh_optical_pen_operator"
                                    android:textColor="@color/color_Info" />

                                <TextView
                                    android:id="@+id/txt_operator_optical_pen_count"
                                    style="@style/custom_Txt_Sub_Title_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin"
                                    android:background="@drawable/border_count"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_minimum"
                                    android:text="99"
                                    android:textAppearance="@style/TextAppearance.FontPathIranSans" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center|left">

                                    <ImageView
                                        android:id="@+id/img_operator_optical_pen_delet"
                                        style="@style/custom_ic_delete_left_style"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="left|center"
                                        app:srcCompat="@drawable/ic_circle_delete" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/custom_divider_style"
                                android:layout_height="1dp"
                                android:layout_margin="0dp" />

                            <LinearLayout
                                android:id="@+id/ln_operator_append"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/border_corner_bottom_right"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/padding"
                                android:paddingBottom="@dimen/padding">

                                <ImageView
                                    android:id="@+id/img_operator_append"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_margin="@dimen/margin" />

                                <TextView
                                    android:id="@+id/txt_operator_append"
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/title_Append_operator"
                                    android:textColor="@color/color_Info" />

                                <TextView
                                    android:id="@+id/txt_operator_append_count"
                                    style="@style/custom_Txt_Sub_Title_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin"
                                    android:background="@drawable/border_count"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_minimum"
                                    android:text="99"
                                    android:textAppearance="@style/TextAppearance.FontPathIranSans" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center|left">


                                    <ImageView
                                        android:id="@+id/img_operator_append_delet"
                                        style="@style/custom_ic_delete_left_style"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="left|center"
                                        app:srcCompat="@drawable/ic_circle_delete" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/custom_divider_style"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ln_operator_sign"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/color_bg_cadr"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/padding"
                                android:paddingBottom="@dimen/padding">

                                <ImageView
                                    android:id="@+id/img_operator_sign"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_margin="@dimen/margin" />

                                <TextView
                                    android:id="@+id/txt_operator_sign"
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/title_sign_operator"
                                    android:textColor="@color/color_Info" />

                                <TextView
                                    android:id="@+id/txt_operator_sign_count"
                                    style="@style/custom_Txt_Sub_Title_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin"
                                    android:background="@drawable/border_count"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_minimum"
                                    android:text="99"
                                    android:textAppearance="@style/TextAppearance.FontPathIranSans" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center|left">

                                    <ImageView
                                        android:id="@+id/img_operator_sign_delet"
                                        style="@style/custom_ic_delete_left_style"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="left|center"
                                        app:srcCompat="@drawable/ic_circle_delete" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                style="@style/custom_divider_style"
                                android:layout_height="1dp"
                                android:layout_margin="0dp" />

                            <LinearLayout
                                android:id="@+id/ln_operator_confirm_workflow"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/border_corner_bottom_left"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/padding"
                                android:paddingBottom="@dimen/padding">

                                <ImageView
                                    android:id="@+id/img_operator_confirm_workflow"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_margin="@dimen/margin" />

                                <TextView
                                    android:id="@+id/txt_operator_confirm_workflow"
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/title_confirm_operator"
                                    android:textColor="@color/color_Info" />

                                <TextView
                                    android:id="@+id/txt_operator_confirm_workflow_count"
                                    style="@style/custom_Txt_Sub_Title_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin"
                                    android:background="@drawable/border_count"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_minimum"
                                    android:text="99"
                                    android:textAppearance="@style/TextAppearance.FontPathIranSans" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center|left">

                                    <ImageView
                                        android:id="@+id/img_operator_confirm_workflow_delet"
                                        style="@style/custom_ic_delete_left_style"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="left|center"
                                        app:srcCompat="@drawable/ic_circle_delete" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_try"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_cover"
                    android:gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_try"
                        style="@style/custom_icon_style"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_refresh_fill" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <include layout="@layout/layout_queue_error_message" />

    </LinearLayout>
</LinearLayout>
