<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="avida.ican">
    <uses-permission android:name="android.checkPermission.INTERNET" />
    <uses-permission android:name="android.checkPermission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.checkPermission.READ_EXTERNAL_STORAGE" />
    <!--______________________________________________________________________________________-->
    <uses-permission android:name="android.checkPermission.RECORD_AUDIO" />
    <uses-permission android:name="android.checkPermission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.checkPermission.WAKE_LOCK" />
    <!--______________________________________________________________________________________-->
    <application
        android:name=".Ican.App"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning,HardcodedText,InnerclassSeparator"
        tools:replace="theme, allowBackup"
        android:fullBackupContent="true"
        android:allowBackup="true">


        <receiver android:name=".Farzin.FarzinBroadcastReceiver"
            tools:ignore="ExtraText">
            android:enabled="true"
            android:exported="true"
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>
        <receiver android:name=".Farzin.FarzinMessageNotificationReceiver"
            tools:ignore="ExtraText">
            android:enabled="true"
            android:exported="true"
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>
        <service android:name=".Ican.View.Custom.NetWorkCheckingService"
            android:enabled="true"/>
        <service android:name=".Farzin.Presenter.Service.Message.SendMessageService"/>
        <service android:name=".Farzin.Presenter.Service.Message.GetSentMessageService" />
        <service android:name=".Farzin.Presenter.Service.Message.GetRecieveMessageService" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="avida.ican.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>


        <activity android:name=".Ican.View.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Farzin.View.FarzinActivityLogin"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Ican.View.ActivityMain"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Farzin.View.FarzinActivityMain"
            android:label="@string/title_activity_farzin_main"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Farzin.View.FarzinActivityWriteMessage"
            android:windowSoftInputMode="adjustNothing|stateHidden" />
        <activity
            android:name=".Farzin.View.FarzinActivityDetailMessage"
            android:windowSoftInputMode="adjustNothing|stateHidden" />
        <activity
            android:name=".Farzin.View.FarzinNotificationClickManager" />



    </application>
</manifest>
