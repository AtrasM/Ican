<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            style="@style/custom_item_rcv_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_minimum"
            android:layout_marginBottom="@dimen/margin_minimum">

            <com.daimajia.swipe.SwipeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipe_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:clickToClose="true"
                app:drag_edge="right|left"
                app:show_mode="pull_out">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_Danger"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/ln_delete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="@dimen/margin"
                            app:srcCompat="@drawable/ic_trash" />

                        <TextView
                            style="@style/custom_Txt_Normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/hint_delete_item"
                            android:textColor="@color/color_White"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_main"
                        style="@style/custom_item_rcv_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_profile"
                            style="@style/custom_ic_right_style"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_margin="0dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_minimum"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/padding">


                                    <ImageView
                                        android:id="@+id/img_waiting"
                                        android:layout_width="15dp"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/margin"
                                        android:background="@drawable/ic_clock"
                                        android:visibility="visible" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center|right"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/txt_name"
                                            style="@style/custom_Txt_Normal_style"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center|right"
                                            android:text="pol pol" />

                                        <TextView
                                            android:id="@+id/txt_role_name"
                                            style="@style/custom_Txt_Normal_style"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="center|right"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:text="[ 123 ]"
                                            android:textColor="@color/colorPrimaryDark"
                                            tools:ignore="NestedWeights" />

                                        <TextView
                                            android:id="@+id/txt_subject"
                                            style="@style/custom_Txt_Normal_style"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/margin_minimum"
                                            android:ellipsize="end"
                                            android:gravity="center|right"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:text="@string/tmpl_text"
                                            android:textColor="@color/color_txt_SubTitle" />


                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </com.daimajia.swipe.SwipeLayout>
        </FrameLayout>

        <LinearLayout
            style="@style/custom_divider_style"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="@dimen/margin_maximum" />
    </LinearLayout>
</LinearLayout>
