<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_minimum">

    <LinearLayout
        style="@style/custom_item_rcv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profile"
                style="@style/custom_ic_right_style"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/txt_name"
                style="@style/custom_Txt_Normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center"
                android:text=""
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/txt_organization_role_name"
                style="@style/custom_Txt_Normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="NestedWeights,RtlHardcoded" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_check_box"
            style="@style/custom_ic_left_style"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        style="@style/custom_divider_style"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>