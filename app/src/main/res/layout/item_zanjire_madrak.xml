<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_item_rcv_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cadr"
    android:orientation="vertical"
    android:paddingLeft="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/img_attach_icon"
            style="@style/custom_ic_right_style"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_attach2" />

        <TextView
            android:id="@+id/txt_name"
            style="@style/custom_Txt_Normal_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="نام"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        style="@style/custom_divider_style"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp" />
</LinearLayout>