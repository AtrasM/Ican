<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/custom_item_rcv_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_minimum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                style="@style/custom_Txt_Normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center"
                android:text="نام" />

            <TextView
                android:id="@+id/txt_organization_role_name"
                style="@style/custom_Txt_Normal_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="سمت"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_delet"
            style="@style/custom_ic_left_style"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/delete" />
    </LinearLayout>

    <LinearLayout
        style="@style/custom_divider_style"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>