<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            layout="@layout/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.booking.rtlviewpager.RtlViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:padding="@dimen/padding">

            <Button
                android:id="@+id/btn_ok"
                style="@style/custom_right_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/success" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/custom_left_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_minimum"
                android:layout_weight="0.5"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/dialog_background"
        android:gravity="center"
        android:visibility="gone">

        <include layout="@layout/item_loding" />

    </LinearLayout>
</FrameLayout>