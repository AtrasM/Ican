<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_White"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">


    <LinearLayout
        android:id="@+id/ln_main"
        style="@style/custom_item_rcv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_minimum"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_header"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_delete"
                    style="@style/custom_ic_right_style"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding_minimum"
                    app:srcCompat="@drawable/ic_close" />

            </LinearLayout>

            <LinearLayout
                style="@style/custom_divider_style"
                android:layout_margin="0dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                style="@style/custom_divider_style"
                                android:layout_margin="0dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/hint_subject2"
                                    android:textColor="@color/color_Info" />

                                <TextView
                                    android:id="@+id/txt_title_subject"
                                    style="@style/custom_Txt_Normal_style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center|right"
                                    android:lines="1"
                                    android:text="سربرگ"
                                    android:textColor="@color/color_txt_Normal" />

                            </LinearLayout>


                            <LinearLayout
                                style="@style/custom_divider_style"
                                android:layout_margin="0dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        style="@style/custom_divider_style"
                        android:layout_height="1dp"
                        android:layout_margin="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_corner_bottom"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/padding"
                            android:paddingBottom="@dimen/padding">

                            <ImageView
                                style="@style/custom_ic_right_style"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginRight="@dimen/margin_minimum"
                                app:srcCompat="@drawable/ic_commission_arrow" />

                            <TextView
                                android:id="@+id/txt_receiver_name"
                                style="@style/custom_Txt_Normal_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin"
                                android:lines="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:textColor="@color/color_Info" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_try"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_cover"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_try"
                            style="@style/custom_icon_style"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/ic_refresh_fill" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <include layout="@layout/layout_queue_error_message" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
