<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Farzin.View.ActivitySetting">

    <include layout="@layout/farzin_custome_toolbar" />

    <TextView
        android:id="@+id/txt_info"
        style="@style/custom_Txt_Normal_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_maximum"
        android:layout_marginTop="@dimen/margin_maximum"
        android:layout_marginRight="@dimen/margin_maximum"
        android:background="@drawable/border"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:text="@string/msg_defualt_get_data_date"
        android:textColor="@color/color_Info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_data_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln_document_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/custom_selected_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        style="@style/custom_ic_right_style"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin"
                        app:srcCompat="@drawable/ic_download_cartable" />

                    <TextView
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_import_cartable_setting"
                        android:textColor="@color/color_Black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_message_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/margin_maximum"
                        android:layout_weight="1"
                        android:background="@color/color_Divider" />

                </LinearLayout>

                <LinearLayout
                    style="@style/custom_selected_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        style="@style/custom_ic_right_style"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin"
                        app:srcCompat="@drawable/ic_download_message" />

                    <TextView
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_message_setting"
                        android:textColor="@color/color_Black" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_lock"
                    style="@style/custom_selected_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="@string/hint_app_lock"
                        android:textColor="@color/color_Black" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:theme="@style/SwitchStyle" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_maximum"
                    android:background="@color/color_Divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_finger_print"
                    style="@style/custom_selected_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:id="@+id/txt_title_finger_print"
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="@string/hint_unlock_with_finger_print"
                        android:textColor="@color/color_Black" />

                    <!--      <com.nightonke.jellytogglebutton.JellyToggleButton
                              android:id="@+id/jtb_finger_print"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:checked="false"
                              app:jtbDraggable="true"
                              app:jtbJelly="lazy_stiff_slim_jim"
                              app:jtbLeftBackgroundColor="@color/color_bg_cadr"
                              app:jtbLeftTextColor="@color/color_bg_cadr"
                              app:jtbLeftTextSize="0dp"
                              app:jtbLeftThumbColor="@color/color_disable"
                              app:jtbRightBackgroundColor="@color/color_Info"
                              app:jtbRightTextColor="@color/color_White"
                              app:jtbRightTextSize="0dp"
                              app:jtbRightThumbColor="@color/color_Success" />
                         -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_finger_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:theme="@style/SwitchStyle" />
                </LinearLayout>

                <include layout="@layout/layout_queue_error_message" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>