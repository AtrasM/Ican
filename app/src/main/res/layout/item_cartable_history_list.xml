<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/margin_minimum"
      android:layout_marginRight="@dimen/margin_minimum"
      android:background="@drawable/border_bottom_very_large_radios_light"
      android:orientation="vertical"
      android:paddingLeft="@dimen/padding"
      android:paddingRight="@dimen/padding">


    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center|top"
          android:layout_marginRight="@dimen/margin_minimum"
          android:layout_marginBottom="@dimen/margin"
          android:layout_weight="1"
          android:gravity="center|right"
          android:orientation="vertical"
          android:paddingTop="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center|right"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_creator_full_name"
                    style="@style/custom_Txt_Normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:text="pol pol"
                    android:textColor="@color/color_Info" />

                <TextView
                    android:id="@+id/txt_creator_role_name"
                    style="@style/custom_Txt_Sub_Title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="[ 123 ]"
                    android:textColor="@color/color_Info"
                    tools:ignore="NestedWeights" />
              </LinearLayout>


              <LinearLayout
                  android:id="@+id/ln_receiver"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                  <TextView
                      android:id="@+id/txt_action"
                      style="@style/custom_Txt_Normal_style"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ellipsize="end"
                      android:gravity="center|right"
                      android:maxLines="1"
                      android:text="pol pol"
                      android:textColor="@color/colorPrimaryDark" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_title"
                        style="@style/custom_Txt_Normal_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:maxLines="1"
                        android:text="pol pol" />

                    <!-- <TextView
                         android:id="@+id/txt_receiver_role_name"
                         style="@style/custom_Txt_Normal_style"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center|right"
                         android:maxLines="1"
                         android:padding="0dp"
                         android:text="[ 123 ]"
                         tools:ignore="NestedWeights" />-->
                  </LinearLayout>

                </LinearLayout>


              </LinearLayout>


            </LinearLayout>


          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center|top"
          android:gravity="center|left"
          android:orientation="vertical"
          android:paddingTop="@dimen/padding">

        <TextView
            android:id="@+id/txt_date"
            style="@style/custom_Txt_Sub_Title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/padding"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="12/06/1397"
            android:textAppearance="@style/TextAppearance.FontPathIranSans" />

        <TextView
            android:id="@+id/txt_time"
            style="@style/custom_Txt_Sub_Title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="0dp"
            android:text="/06/1397"
            android:textAppearance="@style/TextAppearance.FontPathIranSans"
            android:visibility="visible"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/img_more"
            style="@style/custom_selected_style"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/circular_border"
            app:srcCompat="@drawable/ic_arrow_down"
            tools:ignore="UnusedAttribute" />
      </LinearLayout>
    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/border_bg_ln_more_item_cartable_history"
        android:padding="@dimen/padding"
        app:el_duration="100"
        app:el_expanded="false"
        app:el_parallax="0.5"
        tools:ignore="RtlHardcoded">

      <LinearLayout
          android:id="@+id/ln_more"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin_minimum"
            android:layout_marginRight="@dimen/margin"
            android:orientation="vertical">

          <LinearLayout
              android:id="@+id/ln_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                style="@style/custom_Txt_Sub_Title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_minimum"
                android:gravity="center|right"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="@dimen/padding"
                android:text="@string/hint_dastor_erja"
                android:textColor="@color/color_txt_SubTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/border"
                android:gravity="center|top"
                android:orientation="horizontal">

              <ImageView
                  android:id="@+id/img_dastor_erja"
                  style="@style/custom_ic_right_style"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_gravity="center|top"
                  android:layout_margin="@dimen/margin"
                  app:srcCompat="@drawable/ic_document" />

              <TextView
                  android:id="@+id/txt_content"
                  style="@style/custom_Txt_Sub_Title_style"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:longClickable="true"
                  android:paddingLeft="@dimen/padding"
                  android:paddingTop="@dimen/padding"
                  android:paddingRight="0dp"
                  android:paddingBottom="@dimen/padding"
                  android:text="sator erjaaaaaaaa"
                  android:textColor="@color/color_txt_Normal"
                  android:textIsSelectable="true"
                  tools:ignore="NestedWeights" />

            </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:id="@+id/ln_tozih_shakhsi"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                style="@style/custom_Txt_Sub_Title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_minimum"
                android:gravity="center|right"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="@dimen/padding"
                android:text="@string/hint_tozih_shakhsi"
                android:textColor="@color/color_txt_SubTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin"
                android:background="@drawable/border"
                android:gravity="center|top"
                android:orientation="horizontal">

              <ImageView
                  android:id="@+id/img_tozih_shakhsi"
                  style="@style/custom_ic_right_style"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_gravity="center|top"
                  android:layout_margin="@dimen/margin"
                  app:srcCompat="@drawable/ic_tozih_shkhsi" />

              <TextView
                  android:id="@+id/txt_tozih_shakhsi"
                  style="@style/custom_Txt_Sub_Title_style"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center|right"
                  android:longClickable="true"
                  android:paddingLeft="@dimen/padding"
                  android:paddingTop="@dimen/padding"
                  android:paddingRight="0dp"
                  android:paddingBottom="@dimen/padding"
                  android:text="sator erjaaaaaaaa"
                  android:textColor="@color/color_txt_Normal"
                  android:textIsSelectable="true"
                  tools:ignore="NestedWeights" />

            </LinearLayout>
          </LinearLayout>
        </LinearLayout>


      </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
  </LinearLayout>

  <!-- <LinearLayout
       android:id="@+id/ln_divider"
       style="@style/custom_divider_style"
       android:layout_marginLeft="0dp"
       android:layout_marginTop="0dp" />-->
</LinearLayout>
